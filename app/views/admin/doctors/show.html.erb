<%- model_class = Doctor -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="row-fluid">
  <div class="span7">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:full_name) %>:</strong></dt>
      <dd><%= @doctor.full_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
      <dd><%= @doctor.description? ? @doctor.description? : '-' %></dd>
      <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
      <dd><%= @doctor.specialty %></dd>
      <dt><strong><%= model_class.human_attribute_name(:specialty) %>:</strong></dt>
      <dd><%= @doctor.status %></dd>
      <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
      <dd><%= @doctor.user_id %></dd>
      <dt><strong><%= model_class.human_attribute_name(:published) %>:</strong></dt>
      <dd><%= @doctor.published %></dd>
      <dt><strong><%= model_class.human_attribute_name(:rating) %>:</strong></dt>
      <dd><%= @doctor.rating %></dd>
      <dt><strong><%= model_class.human_attribute_name(:education) %>:</strong></dt>
      <dd><%= @doctor.education %></dd>
      <dt><strong><%= model_class.human_attribute_name(:starting_work) %>:</strong></dt>
      <dd><%= @doctor.starting_work %></dd>
      <dt><strong><%= model_class.human_attribute_name(:high_school_name) %>:</strong></dt>
      <dd><%= @doctor.high_school_name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:high_school_finished) %>:</strong></dt>
      <dd><%= @doctor.high_school_finished %></dd>
      <dt><strong><%= model_class.human_attribute_name(:awards) %>:</strong></dt>
      <dd><%= @doctor.awards %></dd>
      <dt><strong><%= model_class.human_attribute_name(:visit_home) %>:</strong></dt>
      <dd><%= @doctor.visit_home %></dd>
      <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
      <dd><%= @doctor.price %></dd>
      <dt><strong><%= model_class.human_attribute_name(:gender) %>:</strong></dt>
      <dd><%= @doctor.gender %></dd>
      <% @doctor.addresses.each do |address| %>
        <dt><strong>Адрес:</strong></dt>
        <dd><%= address.city_address %> <%= address.street_address %></dd>
      <% end %>
    </dl>
  </div>
  <div class="span2 pull-right">
    <%= image_tag @doctor.photourl %>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_doctors_path, :class => 'btn' %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_doctor_path(@doctor), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_doctor_path(@doctor),
              :method => 'delete',
              :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
              :class => 'btn btn-danger' %>
  <%= link_to 'Вернуться к заявкам',
              admin_advises_path, :class => 'btn' %>
</div>
