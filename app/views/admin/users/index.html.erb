<%- model_class = User -%>
<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human(count: 2).titleize %></h1>
  <%= search_form_for [:admin, @q], class: 'form-search' do |f| %>
    <%= f.text_field :email_cont, class: 'search-query', placeholder: 'поиск по email' %>
    <%= f.text_field :last_name_cont, class: 'search-query', placeholder: 'поиск по фамилии' %>
    <%= f.button 'Найти', :class => 'btn search-query' %>
  <% end %>
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_admin_user_path,
              :class => 'btn btn-primary' %>

</div>
<table id="uitems" class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:id) %></th>
    <th><%= model_class.human_attribute_name(:email) %></th>
    <th><%= model_class.human_attribute_name(:first_name) %></th>
    <th><%= model_class.human_attribute_name(:last_name) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <%= render :partial => 'result' %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_user_path,
            :class => 'btn btn-primary' %>

<nav class="pagination" style="display: none;">
  <%= paginate @users, remote: true %>
</nav>
