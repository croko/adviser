<% @advises.each do |advise| %>
  <tr class="item">
    <td><%= link_to advise.id, admin_advise_path(advise) %></td>
    <td><%= advise.user.email %></td>
    <td><%= advise.last_name %></td>
    <td><%= advise.full_name %></td>
    <td><%= advise.city %></td>
    <td><%= advise.processed %></td>
    <td><%= advise.doctor.present? ? link_to('док.', edit_admin_doctor_path(advise.doctor)) : link_to('док.', new_admin_advise_doctor_path(advise)) %></td>
    <td><%= advise.clinic.present? ? link_to('клин.', edit_admin_clinic_path(advise.clinic)) : link_to('клин.', new_admin_advise_clinic_path(advise)) %></td>
    <td><%=l advise.created_at, format: :short %></td>
    <td>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_admin_advise_path(advise), :class => 'btn btn-mini' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  admin_advise_path(advise),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-mini btn-danger' %>
    </td>
  </tr>
<% end %>