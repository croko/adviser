<%- model_class = AdminUser -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:encrypted_password) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_token) %></th>
      <th><%= model_class.human_attribute_name(:reset_password_sent_at) %></th>
      <th><%= model_class.human_attribute_name(:remember_created_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_at) %></th>
      <th><%= model_class.human_attribute_name(:current_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:last_sign_in_ip) %></th>
      <th><%= model_class.human_attribute_name(:failed_attempts) %></th>
      <th><%= model_class.human_attribute_name(:unlock_token) %></th>
      <th><%= model_class.human_attribute_name(:locked_at) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @admin_users.each do |admin_user| %>
      <tr>
        <td><%= link_to admin_user.id, admin_user_path(admin_user) %></td>
        <td><%= admin_user.email %></td>
        <td><%= admin_user.encrypted_password %></td>
        <td><%= admin_user.reset_password_token %></td>
        <td><%= admin_user.reset_password_sent_at %></td>
        <td><%= admin_user.remember_created_at %></td>
        <td><%= admin_user.current_sign_in_at %></td>
        <td><%= admin_user.last_sign_in_at %></td>
        <td><%= admin_user.current_sign_in_ip %></td>
        <td><%= admin_user.last_sign_in_ip %></td>
        <td><%= admin_user.failed_attempts %></td>
        <td><%= admin_user.unlock_token %></td>
        <td><%= admin_user.locked_at %></td>
        <td><%=l admin_user.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_user_path(admin_user), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_user_path(admin_user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admin_user_path,
            :class => 'btn btn-primary' %>
