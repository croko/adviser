- model_class = AdminUser
.page-header
  h1= t '.title', :default => model_class.model_name.human.titleize
dl.dl-horizontal
  dt
    strong
      = model_class.human_attribute_name(:email)
  dd= @admin_user.email
  dt
    strong
      = model_class.human_attribute_name(:name)
  dd= @admin_user.name
  dt
    strong
      = model_class.human_attribute_name(:last_name)
  dd= @admin_user.last_name
  dt
    strong
      = model_class.human_attribute_name(:role)
  dd= @admin_user.role.name
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), \
    admin_admin_users_path, :class => 'btn'                  \

  = link_to t('.edit', :default => t("helpers.links.edit")), \
    edit_admin_admin_user_path(@admin_user), :class => 'btn' \

  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               \
    admin_admin_user_path(@admin_user), method: 'delete',
    data: { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
    class: 'btn btn-danger'
