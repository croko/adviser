= simple_form_for [commentable, @comment], :html => {:class => 'form-horizontal'} do |f|
  .control-group.string.optional
    label.string.optional.control-label Ваша оценка:
    .controls
      #comment_rating.rating
      #hint
  = f.input :message, as: :text
  .control-group.string.optional
    label#length-label.string.optional.control-label
    .controls
      label#length.string.optional
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), \
      "", :class => 'btn'
