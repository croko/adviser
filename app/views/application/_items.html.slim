- cache [@cache_key] do
  .row-fluid
    - @items.each_slice(4) do |slice|
      .item.row-fluid
        ul.thumbnails
          - slice.each do |item|
            li.span3
              = link_to image_tag(item.photourl), polymorphic_path(item) rescue nil
              table.table.table-condensed
                tr
                  td= rating_box(item.rating)
                tr
                  td
                    span id=item.id
                      == render partial: 'likes/like_block', locals: {likeable: item}
                tr
                  td= link_to item.full_name, polymorphic_path(item)
                tr
                  td= item.categories.first.name
                tr
                  td= item.addresses.first.city
